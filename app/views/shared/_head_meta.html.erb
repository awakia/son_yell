<% meta_title = @meta_title ? @meta_title : "SONちゃんのエール" %>
<% meta_og_title = @meta_og_title ? @meta_og_title : meta_title %>
<% meta_description = @meta_description ? @meta_description : "スペシャルオリンピックス日本による大切な誰かを応援するサイトです" %>
<% meta_og_description = @meta_og_description ? @meta_og_description : meta_description %>
<% meta_og_image = @meta_og_image ? @meta_og_image : image_url("yell.png") %>

<%= content_tag :title, meta_title %>

<%= tag :meta, { property: :keywords, content: "エール,yell,スペシャルオリンピックス日本,SON" } %>
<%= tag :meta, { property: :description, content: meta_description } %>

<%= tag :meta, { property: "og:title", content: meta_og_title } %>
<%= tag :meta, { property: "og:image", content: meta_og_image } %>
<%= tag :meta, { property: "og:type", content: "website" } %>
<%= tag :meta, { property: "og:description", content: meta_og_description } %>
<%= tag :meta, { property: "og:url", content: @meta_url.blank? ? request_url : @meta_url } %>

<%= csrf_meta_tag %>
